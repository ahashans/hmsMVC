
@model IEnumerable<HMS.Models.Blog>
@{
    ViewBag.Title = "Blogs";
}
<div class="banner-section banner-image">

</div>
<div class="content padd-top padd-bottom">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2>blog page</h2>
                <br />
                <br />
            </div>

            <div class="col-xs-12 col-sm-9">
                <div class="section">
                    @foreach (var blogPost in Model)
                    {
                        <article class="article clearfix zoom">
                            <figure class="blog-figure">
                                <img class="img-responsive" src="@(string.IsNullOrEmpty(blogPost.FeatureImagePath)?"":Url.Content(blogPost.FeatureImagePath))" alt="" />
                            </figure>
                            <div class="article-text">
                                <h4><a href="@Url.Action("Blog","Home",new{id=blogPost.Id})">@blogPost.Title</a></h4>
                                <ul class="about-blog">
                                    <li class="date">
                                        <a href="@Url.Action("Blog","Home",new{id=blogPost.Id})">@blogPost.CreatedAt.ToString("d")</a>
                                    </li>                                    
                                </ul>
                                @Html.Raw(blogPost.Content)
                                <a class="btn" href="@Url.Action("Blog","Home",new{id=blogPost.Id})">read more</a>
                                <span class="article-icon purple"> <a href="@Url.Action("Blog","Home",new{id=blogPost.Id})"> <i class="fa fa-picture-o" aria-hidden="true"></i> </a> </span>
                            </div>
                        </article>       
                    }
                </div>
            </div>
            <div class="col-xs-12 col-sm-3">

            </div>
