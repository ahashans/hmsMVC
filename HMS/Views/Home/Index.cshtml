                        </figure>
                        <div class="text-left set-margin-top">
                            <a href="about-us.html" class="btn">read more</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <h2>our events</h2>
                    <div id="owl-demo" class="owl-carousel owl-theme">
                        @foreach (var chunk in Model.ProbableEvents.Chunk(2))
                        {
                            <div class="item ">

                                @foreach (var probableEvent in chunk)
                                {
                                    <div class="event-gallery common-padd-top">
                                        <div class="event-image-section zoom">
                                            <figure class="event-image">
                                                <img src="@(string.IsNullOrEmpty(probableEvent.FeatureImagePath)?"":Url.Content(probableEvent.FeatureImagePath))" alt="image" />
                                            </figure>
                                        </div>
                                        <div class="event-content">
                                            <span class="date-section">@probableEvent.EventDate.ToString("d")</span>
                                            <h5>@probableEvent.Title</h5>
                                            <p>
                                                @probableEvent.ShortDescription
                                            </p>
                                        </div>
                                    </div>
                                }

                                @* <div class="text-left set-margin-top"> *@
                                @*     <a href="gallery.html" class="btn">full event</a> *@
                                @* </div> *@
                            </div>
