<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-left" href="~/Home/Index">
                <img alt="Brand" src="~/Content/Images/logo.jpg" height="60" width="60">
            </a>
            @Html.ActionLink("XYZ Hospital", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" ,@style="margin-left:10px;"})
            
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @{
                    if (User.IsInRole("Admin"))
                    {
                        @RenderPage("_AdminNav.cshtml")
                    }
                    if (User.IsInRole("Patient"))
                    {
                        @RenderPage("_PatientNav.cshtml")
                    }
                    if (User.IsInRole("Receptionist"))
                    {
                        @RenderPage("_ReceptionistNav.cshtml")
                    }
                    if (User.IsInRole("Doctor"))
                    {
                        @RenderPage("_DoctorNav.cshtml")
                    }
                }
                

            </ul>
            
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
